<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.View.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#f0f0f0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="3.5*" />

        </Grid.ColumnDefinitions>

        <!-- Linkerzijde: Logo -->
        <Grid Background="White">
            <Image Source="/Assets/BarrocIntensHomepageImage.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="200"
                   Height="200"/>
        </Grid>

        <!-- Rechterzijde: Login -->
        <Grid Background="#1E1E1E" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Login formulier -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="300"
                        Spacing="15">

                <StackPanel>
                    <TextBlock Text="Username" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox x:Name="NaamTextBox"
                             PlaceholderText="Enter your username"
                             BorderBrush="#FFD700"
                             Foreground="White"
                             Background="Transparent"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Password" Foreground="White" Margin="0,10,0,5"/>
                    <PasswordBox x:Name="WachtwoordBox"
                                 PlaceholderText="Enter your password"
                                 BorderBrush="#FFD700"
                                 Foreground="White"
                                 Background="Transparent"/>
                </StackPanel>

                <Button Content="Login"
                        Background="#FFD700"
                        Foreground="Black"
                        FontWeight="Bold"
                        Click="Login_Click"
                        HorizontalAlignment="Stretch"
                        CornerRadius="5"/>

            </StackPanel>

            <!-- Help tekst onderaan -->
            <StackPanel Grid.Row="2"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="0,0,0,25">
                <TextBlock Text="Need help with login call: 00.000000"
               Foreground="#FFD700"
               FontSize="12"
               HorizontalAlignment="Center"/>
                <TextBlock Text="or email test@outlook.com"
               Foreground="#FFD700"
               FontSize="12"
               HorizontalAlignment="Center"
               Margin="0,3,0,0"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
