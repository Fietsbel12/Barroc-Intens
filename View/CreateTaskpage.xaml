<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.View.CreateTaskpage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFDFDFD">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0"
              Background="#22201D"
              Padding="15,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="/Assets/LogoHeader.png"
                   Width="200"
                   Height="70"/>

            <!-- Rol -->
            <TextBlock x:Name="RolTextBlock"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FFFFD300"
                       Text="Rol wordt geladen..."/>

            <!-- Terug knop -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="12"
                        VerticalAlignment="Center">

                <Button Content="Terug"
                        Click="BackButton_Click"
                        Background="#FFFFD300"
                        Foreground="#22201D"
                        Padding="12,6"
                        FontWeight="Bold"
                        CornerRadius="4"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="40,20">

                <TextBlock Text="Nieuwe Taak Aanmaken"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#22201D"
                           Margin="0,0,0,20"/>

                <!-- Naam -->
                <TextBlock Text="Naam"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#22201D"/>
                <TextBox x:Name="NameInput"
                         PlaceholderText="Naam van de taak"
                         Margin="0,5,0,20"/>

                <!-- Beschrijving -->
                <TextBlock Text="Beschrijving"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#22201D"/>
                <TextBox x:Name="DescriptionInput"
                         AcceptsReturn="True"
                         PlaceholderText="Korte beschrijving"
                         Height="120"
                         TextWrapping="Wrap"
                         Margin="0,5,0,20"/>

                <!-- Datum & Tijd -->
                <TextBlock Text="Datum &amp; Tijd"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#22201D"/>

                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,20">
                    <DatePicker x:Name="DateInput"/>
                    <TimePicker x:Name="TimeInput"/>
                </StackPanel>

                <!-- Medewerker -->
                <TextBlock Text="Toewijzen aan Medewerker"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#22201D"/>

                <ComboBox x:Name="MedewerkerCombo"
                          PlaceholderText="Selecteer een medewerker"
                          DisplayMemberPath="Naam"
                          SelectedValuePath="Id"
                          Margin="0,5,0,20"/>

                <!-- Opslaan -->
                <Button Content="Taak Opslaan"
                        x:Name="SaveButton"
                        Click="SaveButton_Click"
                        Background="#FFFFD300"
                        Foreground="#22201D"
                        Padding="12,6"
                        FontWeight="Bold"
                        CornerRadius="4"
                        BorderThickness="0"
                        HorizontalAlignment="Left"/>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
