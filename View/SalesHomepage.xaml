<Page
    x:Class="BarrocIntens.View.SalesHomepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:models="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFDFDFD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#22201D"
              Padding="15,10"
              HorizontalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Margin volgorde: Links, Boven, Rechts, Onder -->
            <Grid Grid.Row="1" HorizontalAlignment="Left">
                <Image Source="/Assets/LogoHeader.png" Margin="0,0,50,0" Width="293" Height="98" />
            </Grid>

            <!-- RECHTS: Navigatieknoppen -->
            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                Spacing="12"
                VerticalAlignment="Center">

                <TextBlock x:Name="RolTextBlock"
                Grid.Column="0"
                Margin="100,0,100,0"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="#FFFFD300"
                Text="Rol wordt geladen..." />

                <Button Content="Terug"
                Click="BackButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

                <Button Content="Verkoop"
                Click="SellButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel Spacing="14">

                <TextBlock Text="Overzicht van alle koffiezetapparaten"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#22201D"
                           TextAlignment="Center"
                           Margin="0,20,0,10"/>
                <TextBox x:Name="SearchTextBox"
                         Header="Zoeken:"
                         PlaceholderText="Zoek op naam of merk..."
                         TextChanged="SearchTextBox_TextChanged"
                         Margin="0,10,0,20" 
                         Width="300"
                         HorizontalAlignment="Center"/>


                <TextBlock x:Name="GeenApparatenText"
                           Text="Er zijn nog geen apparaten toegevoegd."
                           FontSize="18"
                           Foreground="Gray"
                           TextAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- 2 kolommen weergave (optioneel gebruik) -->
                <ItemsWrapGrid x:Name="WrapPanel" Orientation="Horizontal" MaximumRowsOrColumns="2" />

                <ListView x:Name="ApparatenListView"
                          SelectionMode="None"
                          IsItemClickEnabled="False"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- Toon items in 2 kolommen -->
                            <ItemsWrapGrid Orientation="Horizontal" 
                                           MaximumRowsOrColumns="2" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Koffiezetapparaat">
                            <Border BorderBrush="#FFE0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="10" 
                                    Margin="10"
                                    Background="White"
                                    Padding="10"
                                    Width="250">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <Image Width="200"
                                           Height="150"
                                           Stretch="UniformToFill"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,6">
                                        <Image.Source>
                                            <BitmapImage UriSource="{x:Bind VolledigFotoPad, Mode=OneWay}"/>
                                        </Image.Source>
                                    </Image>

                                    <TextBlock Text="{x:Bind Naam}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#22201D"
                                               TextAlignment="Center"/>

                                    <TextBlock Text="{x:Bind Merk}" 
                                               FontSize="15" 
                                               Foreground="Gray"
                                               TextAlignment="Center"/>

                                    <TextBlock FontWeight="SemiBold"
                                               Text="Prijs:"
                                               Margin="0,5,0,0"
                                               TextAlignment="Center"/>
                                    <TextBlock FontSize="15" TextAlignment="Center">
                                        <Run Text="â‚¬ " />
                                        <Run Text="{x:Bind Prijs, Mode=OneWay}" />
                                    </TextBlock>

                                    <TextBlock FontWeight="SemiBold"
                                               Text="Voorraad:"
                                               Margin="0,5,0,0"
                                               TextAlignment="Center"/>
                                    <TextBlock Text="{x:Bind Voorraad}" 
                                               FontSize="15"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
