<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.View.AdminPanelCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFDFDFD">
        <!-- Grid definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              Background="#FF1A1A1A"
              Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Nieuwe medewerker aanmaken"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FFFFD300"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="12"
                        VerticalAlignment="Center">

                <Button Content="Opslaan"
                        Click="OpslaanButton_Click"
                        Background="#FFFFD300"
                        Foreground="#22201D"
                        Padding="12,6"
                        FontWeight="Bold"
                        CornerRadius="4"
                        BorderThickness="0"/>

                <Button Content="Terug"
                        Click="backButton_Click"
                        Padding="12,6"
                        Background="#FFFFD300"
                        Foreground="#22201D"
                        CornerRadius="4"
                        FontWeight="Bold"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Width="600"
                        HorizontalAlignment="Center"
                        Padding="20"
                        Spacing="14">

                <!-- Naam -->
                <TextBlock Text="Naam:" FontWeight="SemiBold" FontSize="16"/>
                <TextBox x:Name="NaamTextBox"
                         PlaceholderText="Naam"
                         Padding="10"
                         BorderBrush="#FFEFEFEF"
                         BorderThickness="1"
                         CornerRadius="6"/>

                <!-- Wachtwoord -->
                <TextBlock Text="Wachtwoord:" FontWeight="SemiBold" FontSize="16"/>
                <TextBox x:Name="WachtwoordTextBox"
                         PlaceholderText="Wachtwoord"
                         Padding="10"
                         BorderBrush="#FFEFEFEF"
                         BorderThickness="1"
                         CornerRadius="6"/>

                <!-- MedewerkerRol -->
                <TextBlock Text="Rol:" FontWeight="SemiBold" FontSize="16"/>
                <ComboBox x:Name="MedewerkerRolComboBox"
                          PlaceholderText="Selecteer rol"
                          Padding="10"
                          BorderBrush="#FFEFEFEF"
                          BorderThickness="1"
                          CornerRadius="6"/>

                <!-- Error / Success -->
                <TextBlock x:Name="ErrorsTextblock" Foreground="Red" FontWeight="SemiBold"/>
                <TextBlock x:Name="SuccessTextblock" Foreground="Green" FontWeight="SemiBold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
