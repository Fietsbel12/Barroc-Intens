<Page
    x:Class="BarrocIntens.View.SalesSellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:models="using:BarrocIntens.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFDFDFD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF1A1A1A" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="RolTextBlock"
                       FontSize="20" FontWeight="SemiBold" Foreground="#FFFFD300"
                       VerticalAlignment="Center" Text="Rol wordt geladen..." />

            <Button x:Name="backButton" Grid.Column="1" Content="Terug" Click="backButton_Click"
                    Padding="12,6" Background="#FFFFD300" Foreground="#22201D"
                    CornerRadius="4" FontWeight="Bold" BorderThickness="0"/>
        </Grid>

        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="15">
                <TextBlock Text="Product Toevoegen" FontSize="20" FontWeight="Bold"/>

                <ComboBox x:Name="CustomerComboBox" Header="Selecteer Klant"
                          HorizontalAlignment="Stretch" DisplayMemberPath="KlantNaam"
                          PlaceholderText="Kies de klant..."/>

                <Border Height="1" Background="LightGray" Margin="0,10"/>

                <ComboBox x:Name="ProductComboBox" Header="Kies Apparaat"
                          HorizontalAlignment="Stretch"
                          SelectionChanged="ProductComboBox_SelectionChanged"
                          PlaceholderText="Zoek een apparaat...">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="models:Koffiezetapparaat">
                            <Grid Padding="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind Naam}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind Merk}" FontSize="11" Foreground="Gray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{x:Bind Voorraad}" 
                                           VerticalAlignment="Center" Foreground="Gray" FontSize="12" Margin="10,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock x:Name="StockStatusText" Text="Voorraad: -" FontSize="14" FontWeight="Medium" Foreground="Gray"/>

                <NumberBox x:Name="QuantityNumberBox" Header="Aantal" Value="1" Minimum="1" SpinButtonPlacementMode="Inline"/>

                <Button Content="Toevoegen aan lijst" Click="AddToCart_Click"
                        HorizontalAlignment="Stretch" Background="#E0E0E0" Height="40"/>

                <TextBlock x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap" Visibility="Collapsed" FontWeight="SemiBold"/>
            </StackPanel>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Winkelmandje" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                <ListView x:Name="CartListView" Grid.Row="1" 
                          BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:CartItem">
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{x:Bind Product.Naam}" FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Product.Merk}" FontSize="12" Foreground="Gray"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{x:Bind Aantal}" Margin="15,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="x" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Grid.Column="3" Text="{x:Bind TotaalPrijs}" FontWeight="Bold" VerticalAlignment="Center" Foreground="DarkGreen"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="2" Spacing="10" Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Totaalbedrag: " FontSize="18"/>
                        <TextBlock x:Name="TotalPriceText" Text="â‚¬ 0,00" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <Button Content="Order Definitief Maken" Click="Checkout_Click"
                            HorizontalAlignment="Stretch" Padding="15"
                            Background="#22201D" Foreground="#FFFFD300" FontWeight="Bold" FontSize="16"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>