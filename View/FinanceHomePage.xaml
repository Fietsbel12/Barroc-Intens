<Page
    x:Class="BarrocIntens.View.FinanceHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:models="using:BarrocIntens.Models"
    xmlns:localData="using:BarrocIntens.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFDFDFD">
        <Grid.RowDefinitions>
            <!-- Header (0) -->
            <RowDefinition Height="Auto"/>
            <!-- Knoppen (1) -->
            <RowDefinition Height="Auto"/>
            <!--Overzicht (2) -->
            <RowDefinition Height="Auto"/>
            <!-- Content (3) -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- =================== HEADER =================== -->
        <Grid Grid.Row="0"
              Background="#FF1A1A1A"
              Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="RolTextBlock"
                       Grid.Column="0"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FFFFD300"
                       Text="Rol wordt geladen..." />

            <Button x:Name="backButton"
                    Grid.Column="1"
                    Content="Terug"
                    Click="backButton_Click"
                    Padding="12,6"
                    Background="#FFFFD300"
                    Foreground="#22201D"
                    CornerRadius="4"
                    FontWeight="Bold"
                    BorderThickness="0"/>
        </Grid>

        <!-- =================== PDF KNOPPEN =================== -->
        <StackPanel Grid.Row="1"
            Spacing="10"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,20,0,0">
            
            <!-- Offerte aanmaak button -->
            <Button Content="Offerte aanmaken"
                        x:Name="offerteAanmaken"
                        Background="#FFFFD300"
                        Foreground="#22201D"
                        Padding="10"
                        CornerRadius="4"
                        FontWeight="Bold"
                        Click="offerteAanmaken_Click"/>

            <!-- Factuur aanmaak button -->
            <Button Content="Factuur aanmaken"
                        x:Name="factuurAanmaken"
                        Background="#ffffd300"
                        Foreground="#22201d"
                        Padding="10"
                        CornerRadius="4"
                        FontWeight="Bold"
                        Click="factuurAanmaken_Click"/>

            <!-- Contract aanmaak button -->
            <Button Content="Contract aanmaken"
                        x:Name="contractAanmaken"
                        Background="#ffffd300"
                        Foreground="#22201d"
                        Padding="10"
                        CornerRadius="4"
                        FontWeight="Bold"
                        Click="contractAanmaken_Click"/>
        </StackPanel>

        <!-- =================== OFFERTE OVERZICHT =================== -->
        <StackPanel Grid.Row="2"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Width="650"
                    Spacing="10">
            <TextBlock Text="Offertes"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#22201d"/>

            <ListView x:Name="OfferteListView"
                      IsItemClickEnabled="True"
                      ItemClick="OfferteListView_ItemClick">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="localData:Offerte">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Company }"/>
                            <TextBlock Text="{x:Bind Customer }"/>
                            <TextBlock Text="{x:Bind CreatedAt }"/>

                            <Button Content="Bewerken"
                                    x:Name="editOfferte"
                                    Click="editOfferte_Click"
                                    Tag="{x:Bind Id}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>    
            </ListView>
        </StackPanel>
        
        <!-- =================== CONTENT =================== -->
        <ScrollViewer Grid.Row="3">
            <StackPanel Width="650"
                        HorizontalAlignment="Center"
                        Padding="20"
                        Spacing="14">

                <!-- Feedback -->
                <TextBlock x:Name="FeedbackText"
                           Foreground="#22201D"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,0,0,10"/>

                <!-- Lijst apparaten -->
                <ListView x:Name="ApparatenListView">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Koffiezetapparaat">
                            <Border Background="#FFF9F9F9"
                                    BorderBrush="#FFEFEFEF"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="10"
                                    Margin="0,5,0,5">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                                    <!-- Foto -->
                                    <Image Width="60" Height="60">
                                        <Image.Source>
                                            <BitmapImage UriSource="{x:Bind VolledigFotoPad, Mode=OneWay}"/>
                                        </Image.Source>
                                    </Image>

                                    <!-- Naam & merk -->
                                    <StackPanel Width="200" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Naam}" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Merk}" FontStyle="Italic"/>
                                    </StackPanel>

                                    <!-- Prijs invoer -->
                                    <TextBox Width="150" PlaceholderText="Prijs" Margin="0,0,10,0"/>

                                    <!-- Opslaan knop -->
                                    <Button Content="Opslaan"
                                            Tag="{x:Bind}"
                                            Click="OpslaanPrijs_Click"
                                            Background="#FFFFD300"
                                            Foreground="#22201D"
                                            FontWeight="Bold"
                                            CornerRadius="4"
                                            Padding="8,4"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Geen apparaten -->
                <TextBlock x:Name="GeenApparatenText"
                           Text="Geen apparaten met prijs 0."
                           Visibility="Collapsed"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
