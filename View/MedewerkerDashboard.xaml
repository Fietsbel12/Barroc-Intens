<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BarrocIntens.View.MedewerkerDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarrocIntens.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFFDFDFD">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- =================== HEADER =================== -->
        <Grid Grid.Row="0"
      Background="#22201D"
      Padding="15,10"
      HorizontalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Logo -->
                <ColumnDefinition Width="*"/>
                <!-- PageTitle -->
                <ColumnDefinition Width="Auto"/>
                <!-- Navigatie -->
            </Grid.ColumnDefinitions>

            <!-- LINKS: Logo -->
            <Image Grid.Column="0"
           Source="/Assets/LogoHeader.png"
           Width="293"
           Height="98"
           VerticalAlignment="Center"
           Margin="0,0,40,0"/>

            <!-- MIDDEN: PageTitle -->
            <TextBlock Grid.Column="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="22"
               FontWeight="SemiBold"
               Foreground="#FFFFD300"
               Text="Dashboard"/>

            <!-- RECHTS: Navigatieknoppen -->
            <StackPanel Grid.Column="2"
                Orientation="Horizontal"
                Spacing="12"
                VerticalAlignment="Center">

                <!-- Rol -->
                <TextBlock x:Name="RolTextBlock"
                   Margin="0,0,20,0"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#FFFFD300"
                   Text="Rol wordt geladen..." />

                <Button Content="Planner"
                Click="PlanningPageButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

                <Button Content="Sales"
                Click="SalesPageButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

                <Button Content="Inkoop"
                Click="InkoopPageButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

                <Button Content="Maintenance"
                Click="MaintenancePageButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

                <Button Content="Finance"
                Click="FinancePageButton_Click"
                Background="#FFFFD300"
                Foreground="#22201D"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="0"/>

                <Button x:Name="AdminPageButton"
                Content="Admin"
                Click="AdminPageButton_Click"
                Background="Transparent"
                Foreground="#FFFFD300"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderThickness="1"
                BorderBrush="#FFFFD300"
                Visibility="Collapsed"/>

                <Button Content="Logout"
                Click="LogoutButton_Click"
                Background="Transparent"
                Foreground="#FFFFD300"
                Padding="12,6"
                FontWeight="Bold"
                CornerRadius="4"
                BorderBrush="#FFFFD300"
                BorderThickness="1"/>
            </StackPanel>
        </Grid>


        <!-- =================== CONTENT =================== -->
        <Grid Grid.Row="1"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <TextBlock Text="Welkom op het dashboard!"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#22201D"/>
        </Grid>
    </Grid>
</Page>
